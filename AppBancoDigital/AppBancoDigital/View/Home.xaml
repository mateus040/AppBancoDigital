<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Home">
    <ContentPage.Content>

        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" BackgroundColor="#820ad1" Padding="15">

                    <StackLayout Orientation="Horizontal">
                        <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="#9b3bda" CornerRadius="50" Source="logo2.png" Padding="10" HorizontalOptions="StartAndExpand" />
                        <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="#820ad1" CornerRadius="50" Source="logo2.png" Padding="10" />
                        <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="#820ad1" CornerRadius="50" Source="logo2.png" Padding="10" />
                        <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="#820ad1" CornerRadius="50" Source="logo2.png" Padding="10" />
                    </StackLayout>

                    <Label Text="Olá, Mateus Moreno" FontAttributes="Bold" FontSize="20" TextColor="#fff" HorizontalOptions="StartAndExpand" />

                    <Frame HeightRequest="120" CornerRadius="15">
                        <Label Text="Vem aceitar seu pedacinho" TextColor="#000" FontAttributes="Bold" HorizontalOptions="Start" HorizontalTextAlignment="Start" WidthRequest="200" FontSize="24" />
                    </Frame>

                    <Button FontSize="14" HorizontalOptions="Start" Text="Eu quero" BackgroundColor="#fff" TextColor="#000" FontAttributes="Bold" CornerRadius="15" />

                </StackLayout>

                <StackLayout Grid.Row="1" Padding="20" Spacing="20">
                    <Label Text="Conta" TextColor="#000" FontSize="20" FontAttributes="Bold" />
                    <Label Text="R$0,00" TextColor="#000" FontSize="24" FontAttributes="Bold" />

                    <ScrollView Orientation="Horizontal">

                        <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">

                            <StackLayout>
                                <ImageButton HorizontalOptions="CenterAndExpand" Source="logo2.png" CornerRadius="50" BackgroundColor="#f0f1f5" Padding="10" HeightRequest="50" WidthRequest="50" />
                                <Label Text="pix" TextColor="#000" HorizontalOptions="Center" />
                            </StackLayout>

                            <StackLayout>
                                <ImageButton HorizontalOptions="CenterAndExpand" Source="logo2.png" CornerRadius="50" BackgroundColor="#f0f1f5" Padding="10" HeightRequest="50" WidthRequest="50" />
                                <Label Text="pagar" TextColor="#000" HorizontalOptions="Center" />
                            </StackLayout>

                        </StackLayout>
                        
                    </ScrollView>
                </StackLayout>
                
            </Grid>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>