<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Home">
    <ContentPage.Content>

        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0" BackgroundColor="#820ad1" Padding="15">

                    <StackLayout Orientation="Horizontal">
                        <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="#9b3bda" Source="Img/logo2.png" Padding="10" HorizontalOptions="StartAndExpand" />
                    </StackLayout>
                    
                </StackLayout>
            </Grid>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>